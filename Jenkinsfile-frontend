pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: buildah
spec:
  serviceAccountName: jenkins-sa
  containers:
  - name: buildah
    image: 100587526360.dkr.ecr.us-east-1.amazonaws.com/buildah-awscli:latest
    command:
    - cat
    tty: true
    securityContext:
      privileged: true
    volumeMounts:
    - name: workspace-volume
      mountPath: /home/jenkins/agent
  volumes:
  - name: workspace-volume
    emptyDir: {}
"""
        }
    }

    environment {
        AWS_REGION = "us-east-1"
        REPO_NAME = "frontend"
        ECR_REGISTRY = "100587526360.dkr.ecr.${AWS_REGION}.amazonaws.com"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                container('buildah') {
                    git branch: 'main',
                        url: 'https://github.com/MultiCloud-Devops/fullstack-authors-books-application.git'
                }
            }
        }

        stage('Login to ECR') {
            steps {
                container('buildah') {
                    sh '''
                        echo "Logging in to Amazon ECR..."
                        aws ecr get-login-password --region $AWS_REGION | buildah login --username AWS --password-stdin $ECR_REGISTRY
                    '''
                }
            }
        }

        stage('Build and Push Image to ECR') {
            steps {
                container('buildah') {
                    sh '''
                        echo "Building Docker image for frontend..."
                        cd frontend
                        buildah bud -t $ECR_REGISTRY/$REPO_NAME:$IMAGE_TAG .

                        echo "Pushing image to ECR..."
                        buildah push $ECR_REGISTRY/$REPO_NAME:$IMAGE_TAG
                    '''
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                container('buildah') {
                    sh '''
                        echo "Updating image in k8s manifest..."
                        sed -i "s|image:.*|image: $ECR_REGISTRY/$REPO_NAME:$IMAGE_TAG|" ../k8s-files/frontend-deployment.yaml
                    '''
                }
            }
        }

        stage('Commit updated manifest') {
            steps {
                container('buildah') {
                    sh '''
                        git config user.email "jenkins@example.com"
                        git config user.name "Jenkins CI"
                        git add ../k8s-files/frontend-deployment.yaml
                        git commit -m "Updated frontend image in k8s manifest to $IMAGE_TAG"
                        git push origin main
                    '''
                }
            }
        }
    }
}
